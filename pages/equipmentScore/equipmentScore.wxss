/* pages/equipmentScore/equipmentScore.wxss */
.container {
  height: 100vh;
  width: 100%;
  background-color: #353535;
  flex-direction: column;
}

.navbarTitle {
  height: 10vh;
}

/* 演示 */
.navbar {
  display: flex;
  position: absolute;
  left: 0;
  top: 10rpx;
  z-index: 500;
  width: 100%;
  height: 50px;
  flex-direction: row;
  text-align: center;
  color: #A8A8A8;
  font-size: 15px;
  box-sizing: border-box;
  border-bottom: 1rpx solid #fff;
}

.navbar-item {
  flex: 1;
  padding: 26rpx 0px;
}

.navbar-item-active {
  margin-top: 15rpx;
  transition: all 0.3s;
  border-radius: 10rpx;
  border-bottom: 10rpx solid #b0988b;
  color: #fff;
}

.movie-content-wrapper {
  padding-top: 50px;
}